<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using Game.Models;

    <h1>Tamagotchis</h1>
    @if (Model.Count == 0)
    {
      <p>There are no Tamagotchis in the list.</p>
    }
    <ul>
      @foreach (Tamagotchi tamagotchi in Model)
      {
        <li><a href='/game/@tamagotchi.Id'>@tamagotchi.Name</a></li>
      }
    </ul>

    <a href="/game/new">Add a new Tamagotchi.</a>

    <form action="/game/delete" method="post">
      <button type="submit" name="button">Clear All Game</button>
    </form>
  </body>
</html>